<h1 class='page-header'>My shipments</h1>
<p>
<%= link_to 'New shipment', new_shipment_path %>
</p><p>
<%= link_to 'Bulk import', '/bulk_import' %>
</p>

<%= will_paginate @shipments %>
<div class="table-responsive">
 <%= form_tag({:action => 'index'}, {:method => :get}) do %>
  <table class='table table-striped'>
    <tr>
      <th>Shipment</th>
      <th>Reference</th>
      <th>Timestamp</th>
      <th>Product code</th>
      <th>Dimensions</th>
      <th>Weight (kg)</th>
      <th>Amount</th>
      <th>Status</th>
    </tr>
   
    <tr>
    	<td><input type='text' name='id' value='<%= params[:id] %>'/></td>
    	<td><input type='text' name='reference' value='<%= params[:reference] %>' /></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td></td>
    	<td style='display:none'><button class="btn btn-lg btn-primary btn-block" type="submit">Search</button></td>
    </tr>
    
    <tr>
    	
    </tr>
    <% @shipments.each do |shipment| %>
    <tr>
      <td><%= link_to "#{shipment.pretty_id}", shipment_path(shipment) %>
  	  <td><%= shipment.reference %></td>
      <td><%= shipment.created_at %></td>
      <td><%= shipment.product.product_code %></td>
      <td><%= shipment.package_length %> x <%= shipment.package_width %> x <%= shipment.package_height %></td>
      <td><%= shipment.package_weight %></td>
      <td><%= shipment.amount %></td>
      <td><%= shipment.status %></td>
    </tr>
    <% end %>
  </table>
  <% end %>
</div>
