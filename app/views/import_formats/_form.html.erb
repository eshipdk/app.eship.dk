<h4 class='sub-header'>Recipient</h4>
<table class='table table-striped'>
	<tr>
		<th>Name</th><th>Attention</th><th>Address 1</th><th>Address 2</th><th>Zip code</th>
	</tr>
	<tr>
		<td class='<%= input_field_class :recipient_company_name %>'><%= f.bstxt_field :recipient_company_name, :class => 'form-control'  %></td>
		<td class='<%= input_field_class :recipient_attention %>'><%= f.bstxt_field :recipient_attention, :class => 'form-control'  %></td>
		<td class='<%= input_field_class :recipient_address_line1 %>'><%= f.bstxt_field :recipient_address_line1, :class => 'form-control'  %></td>
		<td class='<%= input_field_class :recipient_address_line2 %>'><%= f.bstxt_field :recipient_address_line2, :class => 'form-control'  %></td>
		<td class='<%= input_field_class :recipient_zip_code %>'><%= f.bstxt_field :recipient_zip_code, :class => 'form-control'  %></td>
	</tr>
</table>
<table class='table table-striped'>
	<tr>
		<th>City</th><th>Country</th>
