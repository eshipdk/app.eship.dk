<%= form_for @format do |f| %>

<div class='table-responsive'>
<table class='table table-striped'>
	<tr>
		<th><label for='importer_default'>Default</label></th><th><label for='importer_interline'>Interline</label></th>
	</tr>
	<tr>
		<td><%= radio_button_tag 'importer', 'default', @format.importer == 'default' %></td>
		<td><%= radio_button_tag 'importer', 'interline', @format.importer == 'interline' %></td>
	</tr>
</table>

<div id='default' class='conf-specific'>
	
	<h4 class='sub-header'>Product</h4>
	<table class='table table-striped'>
		<tr>
			<th>Product code</th>
			<th>Parcelshop id</th>
			<th>Return</th>
			<th>Label action</th>
			<th>Reference</th>
			<th>Description</th>
		</tr>
		<tr>
			<td class='<%= input_field_class :product_code %>'>
				<%= f.bstxt_field :product_code, :class => 'form-control' %>
			</td>
			<td  class='<%= input_field_class :parcelshop_id %>'><%= f.bstxt_field :parcelshop_id, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :return %>'><%= f.bstxt_field :return , :class => 'form-control' %></td>
			<td class='<%= input_field_class :label_action %>'><%= f.bstxt_field :label_action , :class => 'form-control' %></td>
			<td class='<%= input_field_class :reference %>'><%= f.bstxt_field :reference , :class => 'form-control' %></td>
			<td class='<%= input_field_class :description %>'><%= f.bstxt_field :description, :class => 'form-control' %></td>
		</tr>
	</table>
	
	<h4 class='sub-header'>Package</h4>
	<table class='table table-striped'>
		<tr>
			<th>Amount</th><th>Weight</th><th>Height</th><th>Length</th><th>Width</th>
		</tr>
		<tr>
			<td class='<%= input_field_class :amount %>'><%= f.bstxt_field :amount, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :package_weight %>'><%= f.bstxt_field :package_weight, :class => 'form-control' %></td>
			<td class='<%= input_field_class :package_height %>'><%= f.bstxt_field :package_height, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :package_length %>'><%= f.bstxt_field :package_length, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :package_width%>'><%= f.bstxt_field :package_width, :class => 'form-control'  %></td>
		</tr>
	</table>
	
</div>

<div id='interline' class='conf-specific'>
	<h4 class='sub-header'>Product</h4>
	<table class='table table-striped'>
		<tr>
			<th>Order number</th>
			<th>Shipment type</th>
			<th>Comment</th>
			<th>Parcelshop id</th>
		</tr>
		<tr>
			<td class='<%= input_field_class :reference %>'><%= f.bstxt_field :reference, :class => 'form-control' %></td>
			<td class='<%= input_field_class :product_code %>'><%= f.bstxt_field :product_code , :class => 'form-control' %></td>
			<td class='<%= input_field_class :description %>'><%= f.bstxt_field :description, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :parcelshop_id %>'><%= f.bstxt_field :parcelshop_id , :class => 'form-control' %></td>
		</tr>
	</table>
	
	<h4 class='sub-header'>Package</h4>
	<table class='table table-striped'>
		<tr>
			<th>Amount</th><th>Weight</th>
		</tr>
		<tr>
			<td class='<%= input_field_class :amount %>'><%= f.bstxt_field :amount, :class => 'form-control'  %></td>
			<td class='<%= input_field_class :package_weight %>'><%= f.bstxt_field :package_weight , :class => 'form-control' %></td>
		</tr>
	</table>
	


	<% if false %>
	<p>
		<%= check_box_tag 'interline_default_mail_advertising', "1",  @format.interline_default_mail_advertising %> <label for='interline_default_mail_advertising'>Default mail advertising (Interline setting)</label><br/>
	</p>
	<% end %>
</div>

