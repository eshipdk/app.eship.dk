<h1 class='page-header'>Users
	<span class='pull-right'>
		<a href='<%= url_for new_user_path %>' class='btn btn-primary' role='button'>New user</a>
	</span>
	<div class='clearfix'></div>
	</h1>
	
<%= grid_before @users %>

  <table class='table table-striped'>
  	<thead>
	 	<tr>
	      <th>User</th>
	      <th>Email</th>
	      <th>Role</th>
	      <th>Delete</th>
	    </tr>
  	</thead>
   	<tbody>
   		<% @users.each do |user| %>
		    <tr>
		      <td><%= link_to user.name, user_path(user) %></td>
		      <td><%= user.email %></td>
		      <td><%= user.role %></td>
		      <td>
		        <% if user != @current_user %>
		        <%= link_to 'Delete', user_path(user),
		              method: :delete,
		              data: { confirm: 'Are you sure?' } %>
		        <% end %>
		      </td>
		    </tr>
	    <% end %>
   	</tbody>
  </table>
<%= grid_after @users %>
